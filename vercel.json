{
  "builds": [
    {
      "src": "gameverse_backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "gameverse_frontend/**",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "gameverse_backend/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "gameverse_frontend/dist/$1"
    }
  ]
}
